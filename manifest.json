{
  "manifest_version": 3,
  "name": "MyOrangeCerk Scraper",
  "version": "1.0.0",
  "description": "Scraper for MyOrangeCerk case search",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["https://myeclerk.myorangeclerk.com/*"],
  "content_scripts": [
    {
      "matches": ["https://myeclerk.myorangeclerk.com/Cases/Search*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["pdf.mjs", "pdf.worker.mjs"],
      "matches": ["https://myeclerk.myorangeclerk.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' ; object-src 'self'"
  }
}
